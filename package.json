{
  "name": "myquran",
  "description": "A simple API wrapper for api.myquran.com",
  "version": "1.0.0",
  "files": ["dist/*.js", "src/Typings.d.ts"],
  "main": "dist/Index.js",
	"types": "src/Typings.d.ts",
  "scripts": {
    "test": "clear && ava ./src/Test.ts",
    "build": "rm -rf dist && tsc"
  },
  "keywords": [
    "api",
    "myquran",
    "indonesia",
    "kemenag",
    "quran"
  ],
  "author": "ray",
  "license": "MIT",
  "dependencies": {
    "undici": "^5.22.1"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "ava": "^5.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "environmentVariables": {
      "TS_NODE_LOG_ERROR": "true"
    },
    "require": [
      "ts-node/register"
    ]
  }
}